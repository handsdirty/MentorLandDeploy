<table class="table table-condensed">
  <tr>
    <td style="height: 30px"><b>Course</b></td>
    <td style="height: 30px"><b>Price</b></td>
    <td style="height: 30px"><b>Capacity</b></td>
    <td style="height: 30px"></td>
  </tr>
  <% @allcourses.each do |course| %>
      <tr>
        <td style="height: 60px"><%= course.name %></td>
        <td style="height: 60px"><%= course.price %></td>
        <td style="height: 60px"><%= course.capacity %></td>
        <td style="height: 60px"><%= button_to("Add to Cart", {:controller => "students", :action => "addtoCart", :course_id => course.id}, :remote => false, class: "btn btn-warning") %></td>
      </tr>
  <% end %>
</table>


